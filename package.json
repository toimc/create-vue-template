{
  "name": "create-vue-template",
  "version": "0.2.12",
  "description": "A CLI for create vue-admin template",
  "keywords": [],
  "author": "brian <admin@wayearn.com>",
  "bin": {
    "create-vue-template": "dist/index.cjs"
  },
  "packageManager": "pnpm@8.11.0",
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "node --watch-path=src dist/index.mjs",
    "release": "nrm use npm && npm publish",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "build": "unbuild",
    "build:dev": "unbuild --stub --watch",
    "prepare": "simple-git-hooks",
    "format": "prettier --write --ignore-path .gitignore ."
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.0",
    "nrm": "^1.2.6",
    "prettier": "^3.1.1",
    "simple-git-hooks": "^2.9.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,json}": "prettier --write --ignore-path .gitignore"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ejs": "^3.1.9",
    "fs-extra": "^11.2.0",
    "jiti": "^1.21.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "prompts": "^2.4.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/toimc/create-vue-template.git"
  }
}
